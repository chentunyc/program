<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.training.module.resource.mapper.ResourceMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.training.module.resource.entity.Resource">
        <id column="id" property="id"/>
        <result column="resource_name" property="resourceName"/>
        <result column="resource_type" property="resourceType"/>
        <result column="description" property="description"/>
        <result column="cover_image" property="coverImage"/>
        <result column="category" property="category"/>
        <result column="tags" property="tags"/>
        <result column="uploader_id" property="uploaderId"/>
        <result column="file_size" property="fileSize"/>
        <result column="download_count" property="downloadCount"/>
        <result column="view_count" property="viewCount"/>
        <result column="is_shared" property="isShared"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, resource_name, resource_type, description, cover_image, category, tags,
        uploader_id, file_size, download_count, view_count, is_shared, status,
        create_time, update_time, create_by, update_by, is_deleted
    </sql>

    <!-- 分页查询资源列表 -->
    <select id="selectResourcePage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_resource
        <where>
            is_deleted = 0
            <if test="resourceType != null and resourceType != ''">
                AND resource_type = #{resourceType}
            </if>
            <if test="category != null and category != ''">
                AND category = #{category}
            </if>
            <if test="keyword != null and keyword != ''">
                AND (resource_name LIKE CONCAT('%', #{keyword}, '%')
                OR description LIKE CONCAT('%', #{keyword}, '%')
                OR tags LIKE CONCAT('%', #{keyword}, '%'))
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="onlyShared != null and onlyShared == true">
                AND is_shared = 1
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <!-- 根据资源类型统计数量 -->
    <select id="countByType" resultType="java.lang.Long">
        SELECT COUNT(*) FROM t_resource
        WHERE resource_type = #{resourceType}
        AND is_deleted = 0
        AND status = 1
        <if test="onlyShared != null and onlyShared == true">
            AND is_shared = 1
        </if>
    </select>

    <!-- 获取热门资源 -->
    <select id="selectHotResources" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_resource
        WHERE is_deleted = 0 AND status = 1
        <if test="onlyShared != null and onlyShared == true">
            AND is_shared = 1
        </if>
        ORDER BY view_count DESC
        LIMIT #{limit}
    </select>

    <!-- 获取最新资源 -->
    <select id="selectLatestResources" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_resource
        WHERE is_deleted = 0 AND status = 1
        <if test="onlyShared != null and onlyShared == true">
            AND is_shared = 1
        </if>
        ORDER BY create_time DESC
        LIMIT #{limit}
    </select>

    <!-- 分页查询当前用户上传的资源 -->
    <select id="selectMyResourcePage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_resource
        <where>
            is_deleted = 0
            AND uploader_id = #{uploaderId}
            <if test="resourceType != null and resourceType != ''">
                AND resource_type = #{resourceType}
            </if>
            <if test="keyword != null and keyword != ''">
                AND (resource_name LIKE CONCAT('%', #{keyword}, '%')
                OR description LIKE CONCAT('%', #{keyword}, '%')
                OR tags LIKE CONCAT('%', #{keyword}, '%'))
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

</mapper>
