<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.training.module.news.mapper.NewsMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.training.module.news.entity.News">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="summary" property="summary"/>
        <result column="content" property="content"/>
        <result column="cover_image" property="coverImage"/>
        <result column="author" property="author"/>
        <result column="source" property="source"/>
        <result column="category" property="category"/>
        <result column="tags" property="tags"/>
        <result column="view_count" property="viewCount"/>
        <result column="is_top" property="isTop"/>
        <result column="is_recommend" property="isRecommend"/>
        <result column="publish_time" property="publishTime"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, title, summary, content, cover_image, author, source, category, tags,
        view_count, is_top, is_recommend, publish_time, status,
        create_time, update_time, create_by, update_by, is_deleted
    </sql>

    <!-- 分页查询新闻列表 -->
    <select id="selectNewsPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_news
        <where>
            is_deleted = 0
            <if test="req.keyword != null and req.keyword != ''">
                AND (title LIKE CONCAT('%', #{req.keyword}, '%')
                OR summary LIKE CONCAT('%', #{req.keyword}, '%')
                OR content LIKE CONCAT('%', #{req.keyword}, '%'))
            </if>
            <if test="req.category != null and req.category != ''">
                AND category = #{req.category}
            </if>
            <if test="req.status != null">
                AND status = #{req.status}
            </if>
            <if test="req.isTop != null">
                AND is_top = #{req.isTop}
            </if>
            <if test="req.isRecommend != null">
                AND is_recommend = #{req.isRecommend}
            </if>
        </where>
        ORDER BY is_top DESC, publish_time DESC, create_time DESC
    </select>

</mapper>
